<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003" >
  <ItemDefinitionGroup>
    <ClCompile>
      <AdditionalIncludeDirectories>$(MSBuildThisFileDirectory);%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
      <PreprocessorDefinitions>HAS_YARDSTICK;%(PreprocessorDefinitions)</PreprocessorDefinitions>
    </ClCompile>
	<ResourceCompile>
      <AdditionalIncludeDirectories>$(MSBuildThisFileDirectory);%(AdditionalIncludeDirectories)</AdditionalIncludeDirectories>
    </ResourceCompile>
    <Link>
      <AdditionalLibraryDirectories>$(MSBuildThisFileDirectory);%(AdditionalLibraryDirectories)</AdditionalLibraryDirectories>
	  <AdditionalDependencies>yardstick.lib;%(AdditionalDependencies)</AdditionalDependencies>
	</Link>
  </ItemDefinitionGroup>
  <ItemGroup Label="x64" Condition="'$(Platform.ToLower())' == 'x64'">
    <None Include="$(MSBuildThisFileDirectory)yardstick.dll">
      <DeploymentContent>true</DeploymentContent>
    </None>
  </ItemGroup>
  <Target Name="yardstick_AfterBuild" AfterTargets="AfterBuild"/>
  <Target Name="yardstick_AfterBuildx64" Label="Yardstick" Condition="'$(Platform.ToLower())' == 'x64'" AfterTargets="yardstick_AfterBuild">
    <Copy SourceFiles="$(MSBuildThisFileDirectory)yardstick.dll" DestinationFolder="$(TargetDir)" SkipUnchangedFiles="true" />
  </Target>
</Project>